% LaTeX style file for ACM-ICPC Cheat Sheet.
% load after article.cls

% 中文显示
\usepackage{xeCJK}
\setCJKmainfont[
    BoldFont=STSongti-SC-Black,
    ItalicFont=AdobeFangsongStd-Regular
]{AdobeSongStd-Light}
% \setCJKsansfont{STHeiti}
\setCJKmonofont{STKaiti}

% 数学公式扩展
\usepackage{amsmath, amsthm}

% 目录等级
\usepackage{shorttoc}
\setcounter{tocdepth}{3}

% 代码高亮
\usepackage[cache=false]{minted}
\setminted{
linenos=true,
mathescape,
breaklines,
}

% 页边距
\usepackage{geometry}
\geometry{bottom=1.25in, top=1.25in}
\geometry{left=1.25in, right=1.25in}

% 插入图片
\usepackage{graphicx}

% 环境定义
\newtheorem{theorem}{定理}[section]
\newtheorem{defination}{定义}[section]
\newtheorem{corollary}{推论}[section]

% 特殊命令
\newcommand{\HRule}{\rule{\linewidth}{0.5mm}}

% 名词翻译
\renewcommand{\today}{\number\year 年 \number\month 月 \number\day 日}
\renewcommand{\contentsname}{目\qquad 录}
\renewcommand\figurename{图}
